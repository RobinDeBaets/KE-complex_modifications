                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine", "terminal"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Control R, F5",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("r", ["control"], ["any"]) %>,
                    "to": <%= to([["r", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine", "terminal"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f5", [], ["any"]) %>,
                    "to": <%= to([["r", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine", "terminal"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Alt Tab",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("tab", ["option"], ["any"]) %>,
                    "to": <%= to([["tab", ["left_command"]]]) %>
                }
            ]
        },
        {
            "description": "Alt F4",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("f4", ["option"], []) %>,
                    "to": <%= to([["a", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },        
        {
            "description": "Home",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("home", [], []) %>,
                    "to": <%= to([["mission_control", []]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Alt Space",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("spacebar", ["option"], []) %>,
                    "to": <%= to([["spacebar", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Shift Alt T",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("t", ["shift", "option"], []) %>,
                    "to": {
                        "shell_command": "open -a iTerm"
                    },
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Period",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("keypad_period", [], []) %>,
                    "to": <%= to([["keypad_period", ["left_shift"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Browser zoom",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("hyphen", ["control"], ["any"]) %>,
                    "to": <%= to([["hyphen", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("keypad_hyphen", ["control"], ["any"]) %>,
                    "to": <%= to([["keypad_hyphen", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("equal_sign", ["control"], ["any"]) %>,
                    "to": <%= to([["equal_sign", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("keypad_plus", ["control"], ["any"]) %>,
                    "to": <%= to([["keypad_plus", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("slash", ["control"], ["any"]) %>,
                    "to": <%= to([["keypad_plus", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("0", ["control"], ["any"]) %>,
                    "to": <%= to([["0", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("keypad_0", ["control"], ["any"]) %>,
                    "to": <%= to([["keypad_0", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Shift insert",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("insert", ["left_shift"], ["any"]) %>,
                    "to": <%= to([["v", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_if(["terminal"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Sonos controls",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("volume_increment", ["control"], []) %>,
                    "to": {
                        "shell_command": "/opt/homebrew/bin/sonosscripts change_volume --step 5"
                    },
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("volume_decrement", ["control"], []) %>,
                    "to": {
                        "shell_command": "/opt/homebrew/bin/sonosscripts change_volume --step -5"
                    },
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("volume_increment", ["control", "left_shift"], ["any"]) %>,
                    "to": {
                        "shell_command": "/opt/homebrew/bin/sonosscripts change_bass --step 1"
                    },
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("volume_decrement", ["control", "left_shift"], ["any"]) %>,
                    "to": {
                        "shell_command": "/opt/homebrew/bin/sonosscripts change_bass --step -1"
                    },
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("play_or_pause", ["control"], ["any"]) %>,
                    "to": {
                        "shell_command": "/opt/homebrew/bin/sonosscripts play_pause"
                    },
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "consumer_key_code": "scan_next_track",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": {
                        "shell_command": "/opt/homebrew/bin/sonosscripts next"
                    },
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "consumer_key_code": "scan_previous_track",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": {
                        "shell_command": "/opt/homebrew/bin/sonosscripts previous"
                    },
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Shift insert",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("insert", ["left_shift"], ["any"]) %>,
                    "to": <%= to([["v", ["left_command"]]]) %>,
                    "conditions": [
                        <%= frontmost_application_if(["terminal"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Flameshot shortcuts",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("print_screen", [], ["any"]) %>,
                    "to": [
                        {
                          "key_code": "keypad_4",
                          "modifiers": [
                            "left_command",
                            "left_shift",
                            "left_option"
                          ]
                        }
                    ],
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "Map ⇧⌘4 to ⇧⌘⌥4",
            "manipulators": [
                {
                "type": "basic",
                "from": {
                    "key_code": "4",
                    "modifiers": {
                    "mandatory": [
                        "left_shift",
                        "left_command"
                    ]
                    }
                },
                "to": [
                    {
                    "key_code": "4",
                    "modifiers": [
                        "left_command",
                        "left_shift",
                        "left_option"
                    ]
                    }
                ]
                }
            ]
        }
    ]
}